<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scientific_calc"
    android:background="#FF1B1B1B"
    android:orientation="horizontal"
    >


    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="11dp"
        android:paddingTop="2dp"
        android:paddingEnd="16dp"
        android:paddingBottom="2dp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/solution_tv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="0dp"
        android:paddingEnd="16dp"

        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_alignParentBottom="true"
        android:background="#1B1B1B"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_back"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:paddingBottom="8dp"
                android:text="◀"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_Inverse"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="1/x"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="11dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sqrt"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="√"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_C"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="C"
                android:textColor="#FD4747"
                android:textSize="14dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_bracket"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="()"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_modulo"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="%"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_divide"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#008EFF"
                android:text="÷"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:cornerRadius="36dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sin"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="sin"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="11dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cos"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="cos"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="10dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_tan"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="tan"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="11dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_7"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="7"
                android:textColor="#FFFFFF"
                android:textSize="14dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_8"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_9"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_multiply"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#008EFF"
                android:text="x"
                android:textColor="@color/white"
                android:textSize="13dp"
                app:cornerRadius="36dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ln"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="ln"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_log"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="log"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="11dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_e"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="e"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_4"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="14dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_5"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_6"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_minus"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#008EFF"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="13dp"
                app:cornerRadius="36dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cbrt"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="∛"
                android:textColor="@color/white"
                android:textSize="13dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_square"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="x²"
                android:textColor="@color/white"
                android:textSize="11dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cube"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="x³"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_1"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="14dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_2"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_3"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#008EFF"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="13dp"
                app:cornerRadius="36dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_fact"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="x!"
                android:textColor="@color/white"
                android:textSize="11dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_mod"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="|x|"
                android:textColor="@color/white"
                android:textSize="13dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_pi"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="π"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_AC"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="AC"
                android:textColor="#FD4747"
                android:textSize="13dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_0"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_dot"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2D2E30"
                android:text="."
                android:textColor="@color/white"
                android:textSize="13dp"
                android:textStyle="bold"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_equals"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="#FF9800"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="="
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                app:cornerRadius="36dp" />

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>