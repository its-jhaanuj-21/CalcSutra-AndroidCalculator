<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".speed_conv"
    android:background="@color/my_app_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_height="110dp"
            app:cardBackgroundColor="#151515"
            app:cardCornerRadius="30dp"
            app:cardElevation="11dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:hint="@string/select"
                android:textColorHint="@color/white"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:boxBackgroundColor="#151515">
                <AutoCompleteTextView
                    android:id="@+id/list_from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textColor="@color/white"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/txt_enter_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="25dp"
                android:text="1"
                android:textSize="22dp"
                android:textColor="#FF5722"
                android:layout_gravity="center"

                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_height="110dp"
            app:cardBackgroundColor="#151515"
            app:cardCornerRadius="30dp"
            app:cardElevation="11dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:hint="@string/select"
                android:textColorHint="@color/white"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:boxBackgroundColor="#151515">
                <AutoCompleteTextView
                    android:id="@+id/list_to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textColor="@color/white"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/txt_converted_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="25dp"
                android:textSize="22dp"
                android:textColor="#FF5722"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1B1B1B"
            android:layout_marginTop="60dp"
            android:layout_alignParentBottom="true"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:textSize="32dp"
                    android:layout_margin="12dp"
                    android:id="@+id/btn_7"
                    android:backgroundTint="#2D2E30"
                    android:text="7"
                    android:textColor="#FFFFFF"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:textSize="32dp"
                    android:layout_margin="12dp"
                    android:id="@+id/btn_8"
                    android:backgroundTint="#2D2E30"
                    android:text="8"
                    android:textColor="@color/white"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:textSize="32dp"
                    android:layout_margin="12dp"
                    android:id="@+id/btn_9"
                    android:backgroundTint="#FF2D2E30"
                    android:text="9"
                    android:textColor="@color/white"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:textSize="36dp"
                    android:layout_margin="12dp"
                    android:id="@+id/btn_AC"
                    android:backgroundTint="#FFFFFF"
                    android:text="C"
                    android:textStyle="bold"
                    android:textColor="#FF3D00"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:textSize="32dp"
                    android:layout_margin="12dp"
                    android:id="@+id/btn_4"
                    android:backgroundTint="#FF2D2E30"
                    android:text="4"
                    android:textColor="@color/white"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:textSize="32dp"
                    android:layout_margin="12dp"
                    android:id="@+id/btn_5"
                    android:backgroundTint="#FF2D2E30"
                    android:text="5"
                    android:textColor="@color/white"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:textSize="32dp"
                    android:layout_margin="12dp"
                    android:id="@+id/btn_6"
                    android:backgroundTint="#FF2D2E30"
                    android:text="6"
                    android:textColor="@color/white"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:textSize="28dp"
                    android:layout_margin="12dp"
                    android:id="@+id/btn_C"
                    android:backgroundTint="#2D2E30"
                    android:text="⌫"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:textSize="32dp"
                    android:layout_margin="12dp"
                    android:id="@+id/btn_1"
                    android:backgroundTint="#FF2D2E30"
                    android:text="1"
                    android:textColor="@color/white"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:textSize="32dp"
                    android:layout_margin="12dp"
                    android:id="@+id/btn_2"
                    android:backgroundTint="#FF2D2E30"
                    android:text="2"
                    android:textColor="@color/white"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:textSize="32dp"
                    android:layout_margin="12dp"
                    android:id="@+id/btn_3"
                    android:backgroundTint="#FF2D2E30"
                    android:text="3"
                    android:textColor="@color/white"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:textSize="32dp"
                    android:layout_margin="12dp"
                    android:visibility="invisible"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:textSize="23dp"
                    android:layout_margin="12dp"
                    android:id="@+id/btn_00"
                    android:backgroundTint="#FF2D2E30"
                    android:text="00"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:textSize="32dp"
                    android:layout_margin="12dp"
                    android:id="@+id/btn_dot"
                    android:backgroundTint="#FF2D2E30"
                    android:text="."
                    android:textColor="@color/white"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:textSize="32dp"
                    android:layout_margin="12dp"
                    android:id="@+id/btn_0"
                    android:backgroundTint="#FF2D2E30"
                    android:text="0"
                    android:textColor="@color/white"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="12dp"
                    android:visibility="invisible"/>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>


</RelativeLayout>