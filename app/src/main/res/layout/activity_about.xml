<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".about"
    android:background="@color/my_app_bg"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_abt_us_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:text="About"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_height="600dp"
            app:cardBackgroundColor="#151515"
            app:cardCornerRadius="30dp"
            app:cardElevation="11dp"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="580dp"
                android:orientation="vertical"
                android:layout_gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/applogo"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CalcSutra"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="25dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CalcSutra is an app that can help you with complex calculations, unit conversions and math formulae. It's perfect for students, professionals or anyone who needs a quick and easy way to solve complex equations on-the-go. With the unit converter feature, you can convert different units of length, mass, temperature, and more. CalcSutra is your go-to app for all your calculation needs."
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:textStyle="italic"
                    android:layout_marginTop="25dp"
                    />

                <TextView
                    android:id="@+id/txt_dev_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Developers"
                    android:textColor="#C1C1C1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aakash Deep  |  Aman Kumar  |  Aditya Shekhar"
                        android:textColor="@color/white"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Anuj Kumar Jha  |  Harsh Raj"
                        android:textColor="@color/white"
                        android:textAlignment="center"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/linkedin"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:src="@drawable/linked_in" />
                </LinearLayout>

                <TextView
                    android:id="@+id/rightsreserved"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Copyright Â© 2023 CalcSutra All rights reserved."
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginTop="100dp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>

</RelativeLayout>